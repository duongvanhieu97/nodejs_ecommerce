<div>
    {{#if message }}
        <h1>
            Lỗi là: {{ message }}
        </h1>
    {{/if}}

    <h3>Danh sách sản phẩm</h3>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col"></th>

        </tr>
        </thead>
        <tbody>
        {{#each categories}}

            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>

                <td>
                    <a href="/categories/{{this.id}}" class="btn btn-link">Sửa</a>
                    <a href="/categories/delete/{{this.id}}" class="btn btn-link">Xóa</a>
                </td>
            </tr>
        {{/each}}

        </tbody>
    </table>
</div>